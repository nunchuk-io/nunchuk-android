<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/nc_padding_44" />
            <solid android:color="@color/nc_control_fill_secondary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/nc_padding_44" />
            <solid android:color="@color/nc_control_fill_tertiary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/nc_padding_44" />
            <solid android:color="@color/nc_control_fill_primary" />
        </shape>
    </item>
</selector>
