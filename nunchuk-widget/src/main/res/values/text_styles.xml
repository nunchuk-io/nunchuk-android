<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NCText">
        <item name="android:textColor">@color/nc_text_primary</item>
    </style>

    <style name="NCText.Heading" parent="NCText">
        <item name="android:textSize">@dimen/nc_text_size_24</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="NCText.Bold" parent="NCText">
        <item name="fontTextStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="NCText.Title" parent="NCText">
        <item name="android:textSize">@dimen/nc_text_size_16</item>
        <item name="fontTextStyle">semi_bold</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="NCText.Title.Large" parent="NCText.Title">
        <item name="android:textSize">@dimen/nc_text_size_18</item>
        <item name="fontTextStyle">semi_bold</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="NCText.Title.Small" parent="NCText.Title">
        <item name="android:textSize">@dimen/nc_text_size_12</item>
    </style>

    <style name="NCText.Body" parent="NCText">
        <item name="android:textSize">@dimen/nc_text_size_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="NCText.Body.Small" parent="NCText.Body">
        <item name="android:textSize">@dimen/nc_text_size_12</item>
        <item name="android:textColor">@color/nc_text_secondary</item>
    </style>

    <style name="NCText.EditText.Title" parent="NCText">
        <item name="android:textSize">@dimen/nc_text_size_12</item>
        <item name="android:paddingBottom">@dimen/nc_padding_4</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="NCText.Badges" parent="NCText">
        <item name="android:textSize">@dimen/nc_text_size_10</item>
        <item name="fontTextStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/nc_text_primary</item>
        <item name="android:paddingStart">@dimen/nc_padding_8</item>
        <item name="android:paddingEnd">@dimen/nc_padding_8</item>
        <item name="android:paddingTop">@dimen/nc_padding_2</item>
        <item name="android:paddingBottom">@dimen/nc_padding_2</item>
    </style>
</resources>