<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nc_bottom_sheet_background"
    android:orientation="vertical"
    android:padding="@dimen/nc_padding_16"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp">

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_add_mk4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_add_coldcard_mk4"
        android:textColor="@color/nc_text_primary"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_add_new_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_add_new_nfc_key"
        android:textColor="@color/nc_text_primary"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_add_portal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_new"
        android:drawablePadding="8dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_add_portal"
        android:textColor="@color/nc_text_primary"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_recover_nfc_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_recover_nfc_key_from_backup"
        android:textColor="@color/nc_text_primary"
        android:textSize="@dimen/nc_text_size_16" />
</LinearLayout>