<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <activity
            android:name=".components.signup.SignUpActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".components.changepass.ChangePasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".components.signin.SignInActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="nunchuk" />
            </intent-filter>
        </activity>

        <activity
            android:name=".components.forgot.ForgotPasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".components.recover.RecoverPasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".components.verify.VerifyNewDeviceActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".components.enterxpub.EnterXPUBActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name=".components.authentication.SignInAuthenticationActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>